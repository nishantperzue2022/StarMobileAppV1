<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StartApp.Views.Landing.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WelcomePage"
    BackgroundColor="#F8FAFC">
    <VerticalStackLayout
        Padding="40"
        Spacing="30"
        VerticalOptions="Center">

        <Label
            FontFamily="JakartaSemiBold"
            FontSize="28"
            HorizontalOptions="Center"
            Text="Welcome to SafeLife Insurance"
            TextColor="#1E293B" />

        <Label
            Margin="0,0,0,20"
            FontFamily="RobotoRegular"
            FontSize="18"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Protect what matters most with our trusted plans."
            TextColor="#475569" />

        <Button
            BackgroundColor="#2563EB"
            Clicked="OnGetStartedClicked"
            CornerRadius="14"
            FontFamily="JakartaSemiBold"
            FontSize="18"
            HeightRequest="55"
            Text="Get Started"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>