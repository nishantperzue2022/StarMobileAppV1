<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StartApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StartApp"
    Title="StartApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <Tab Title="Profile" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="ProfilePage" />
        </Tab>

        <Tab Title="Settings" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="SettingsPage" />
        </Tab>
    </TabBar>

</Shell>
